#suite s21_determinant

#test s21_determinant_matrix_simple_1
  int rows = 1;
  int columns = 1;
  matrix_t A = {0};
  s21_create_matrix(rows, columns, &A);
  A.matrix[0][0] = 5;
  double det = 5;
  double res = 0;
  int ret = s21_determinant(&A, &res);
  ck_assert_int_eq(0, ret);
  ck_assert_double_eq(res, det);
  s21_remove_matrix(&A);

