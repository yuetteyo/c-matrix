  s21_create_matrix(rows, columns, &A);
  A.matrix[0][0] = 1;
  A.matrix[0][1] = 1;
  A.matrix[0][2] = 1;
  A.matrix[0][3] = 5;
  A.matrix[1][0] = 6;
  A.matrix[1][1] = 7;
